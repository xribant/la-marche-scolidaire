{% extends 'base.html.twig' %}

{% block title %}La marche scolidaire - Contact{% endblock %}

{% block section %}

    <!--/ Intro Single star /-->
    <section class="intro-single">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-8">
                    <div class="title-single-box">
                        <h1 class="title-single">Contactez nous</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--/ Intro Single End /-->

    <!--/ Contact Star /-->
    <section class="contact">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-md-7">
                            {{ form_start(newForm, {'attr': {'novalidate': 'novalidate'}}) }}
                            {{ form_row(newForm._token) }}
                            <form class="form-a contactForm" action="" method="post" role="form">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="form-group">
                                            {{ form_row(newForm.name) }}
                                            <div class="validation"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="form-group">
                                            {{ form_row(newForm.email) }}
                                            <div class="validation"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <div class="form-group">
                                            {{ form_row(newForm.subject) }}
                                            <div class="validation"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <div class="form-group">
                                            {{ form_row(newForm.message) }}
                                            <div class="validation"></div>
                                        </div>
                                    </div>
                                    {{ form_row(form.captcha) }}
                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-a">Envoyer</button>
                                    </div>
                                </div>
                            </form>
                            {{ form_end(newForm) }}
                        </div>
                        <div class="col-md-5 section-md-t3">
                            <div class="icon-box section-b2">
                                <div class="icon-box-icon">
                                    <span class="ion-ios-paper-plane"></span>
                                </div>
                                <div class="icon-box-content table-cell">
                                    <div class="icon-box-title">
                                        <h4 class="icon-title">Nous Ã©crire</h4>
                                    </div>
                                    <div class="icon-box-content">
                                        <p class="mb-1">Email:
                                            <span class="color-a"> <a href="mailto:info@lamarchescolidaire.be">info@lamarchescolidaire.be</a></span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--/ Contact End /-->

{% endblock %}


