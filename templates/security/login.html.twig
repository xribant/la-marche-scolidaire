<body class="text-center">

    <main class="form-signin">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <img class="mb-4" src="{{ asset('img/logo-bw3.png') }}" alt="" height="60">
            <h1 class="h3 mb-3 fw-normal">S'identifier</h1>

            <div class="col-md-12 mb-3">
                <div class="form-group">
                    <input type="email" class="form-control form-control-lg form-control-a" value="{{ last_username }}" name="email" id="inputEmail" placeholder="name@example.com" autocomplete="email" autofocus>
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    <input type="password" name="password" class="form-control form-control-lg form-control-a" id="inputPassword" autocomplete="current-password" placeholder="Mot de passe">
                </div>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="col-md-12 mb-3">
                <div class="form-group">
                    <input type="checkbox" name="_remember_me" value="remember-me"> Se souvenir
                </div>
            </div>

            <button class="btn btn-a" type="submit">Connexion</button>
        </form>
    </main>
    <!-- JavaScript Libraries -->
    <script src="{{ asset('lib/jquery/jquery.min.js') }}"></script>
