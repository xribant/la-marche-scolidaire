<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        <meta content="La Marche Scolidaire, BW3, marche, scolidaire, solidarité, entité, brabant-wallon, écoles, biereau, louvain-la-neuve" name="keywords">
        <meta content="La Marche Scolidaire des 1, 2 et 3 Octobre 2021. La Marche Scolidaire BW3 ou quand quelques directeurs randonneurs mettent leur passion au profit d’un projet solidaire pour les
        écoles de leur entité… 100km, 3 jours, 24 écoles du Brabant-Wallon." name="description">
        <meta content="Xavier Ribant" name="author">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#ffffff">

        {% block stylesheets %}
            <!-- Favicons -->
            <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('/img/apple-touch-icon.png') }}">
            <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('/img/favicon-32x32.png') }}">
            <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('/img/favicon-16x16.png') }}">
            <link rel="manifest" href="/img/site.webmanifest">
            <link rel="mask-icon" href="/img/safari-pinned-tab.svg" color="#5bbad5">

            <!-- Google Fonts -->
            <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">

            <!-- Font Awesome-->
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

            <!-- Bootstrap CSS File -->
            <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">

            <!-- Libraries CSS Files -->
            <link href="/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
            <link href="/lib/animate/animate.min.css" rel="stylesheet">
            <link href="/lib/ionicons/css/ionicons.min.css" rel="stylesheet">
            <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
            <link href="/css/toastr.min.css" rel="stylesheet">

            <!-- Main Stylesheet File -->
            <link href="/css/style.css" rel="stylesheet">
            <link href="/css/guestbook-carousel.css" rel="stylesheet">
            <link href="/css/sponsor-carousel.css" rel="stylesheet">
        {% endblock %}

    </head>

    <body>
        {% block body %}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-server" role="alert">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <span class="d-flex justify-content-center">{{ message|raw }}</span>
                </div>
            {% endfor %}
            <!--/ Nav Start /-->
            <nav class="navbar navbar-default navbar-trans navbar-expand-lg fixed-top">
                <div class="container">
                    <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarDefault"
                            aria-controls="navbarDefault" aria-expanded="false" aria-label="Toggle navigation">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('home') }}"><img class="brand-logo" src="{{ asset('img/logo-bw3_marche_scolidaire_2021.png') }}" alt=""></a>
                    <a class="navbar-brand text-brand" href="{{ path('home') }}"> La Marche<span class="color-b"> Scolidaire</span></a>
                    <div class="navbar-collapse collapse justify-content-center" id="navbarDefault">
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle {% if activeMenu == 'bw3' %}active{% endif %}" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                                   aria-haspopup="true" aria-expanded="false">
                                    BW3
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="{{ path('bw3_description') }}">Qu'est-ce que c'est ?</a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if activeMenu == 'project' %}active{% endif %}" href="{{ path('project_description') }}">Le Projet</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle {% if activeMenu == 'roadmap' %}active{% endif %}" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                                   aria-haspopup="true" aria-expanded="false">
                                    Parcours
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="{{ path('road_map_day1') }}">Vendredi 1er Octobre</a>
                                    <a class="dropdown-item" href="{{ path('road_map_day2') }}">Samedi 2 Octobre</a>
                                    <a class="dropdown-item" href="{{ path('road_map_day3') }}">Dimanche 3 Octobre</a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if activeMenu == 'contact' %}active{% endif %}" href="{{ path('contact_form') }}">Contact</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if activeMenu == 'photos' %}active{% endif %}" href="{{ path('gallery') }}">Photos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if activeMenu == 'guestbook' %}active{% endif %}" href="{{ path('guestbook') }}">Livre d'or</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!--/ Nav End /-->

            {% block section %}
            {% endblock %}

            <!--/ footer Star /-->
            <section class="section-footer">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12 col-md-4">
                            <div class="widget-a">
                                <div class="w-header-a">
                                    <h3 class="w-title-a text-brand">Contact</h3>
                                </div>
                                <div class="w-footer-a">
                                    <ul class="list-unstyled">
                                        <li class="color-a">
                                            <span class="color-text-a">E-Mail </span> <a href="mailto:info@lamarchescolidaire.be">info@lamarchescolidaire.be</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4 section-md-t3">
                            <div class="widget-a">
                                <div class="w-header-a">
                                    <h3 class="w-title-a text-brand">La Marche</h3>
                                </div>
                                <div class="w-body-a">
                                    <div class="w-body-a">
                                        <ul class="list-unstyled">
                                            <li class="item-list-a">
                                                <i class="fa fa-angle-right"></i> <a href="{{ path('home') }}#sponsors">Sponsors</a>
                                            </li>
                                            <li class="item-list-a">
                                                <i class="fa fa-angle-right"></i> <a href="{{ path('project_description') }}">Le projet</a>
                                            </li>
                                            <li class="item-list-a">
                                                <i class="fa fa-angle-right"></i> <a href="{{ path('gallery') }}">Photos</a>
                                            </li>
                                            <li class="item-list-a">
                                                <i class="fa fa-angle-right"></i> <a href="{{ path('guestbook') }}">Livre d'or</a>
                                            </li>
                                            <li class="item-list-a">
                                                <i class="fa fa-angle-right"></i> <a href="{{ path('road_map_day1') }}">Vendredi 1er Octobre</a>
                                            </li>
                                            <li class="item-list-a">
                                                <i class="fa fa-angle-right"></i> <a href="{{ path('road_map_day2') }}">Samedi 2 Octobre</a>
                                            </li>
                                            <li class="item-list-a">
                                                <i class="fa fa-angle-right"></i> <a href="{{ path('road_map_day3') }}">Dimanche 3 Octobre</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4 section-md-t3">
                            <div class="widget-a">
                                <div class="w-header-a">
                                    <h3 class="w-title-a text-brand">L'entité BW3</h3>
                                </div>
                                <div class="w-body-a">
                                    <ul class="list-unstyled">
                                        <li class="item-list-a">
                                            <i class="fa fa-angle-right"></i> <a href="{{ path('bw3_description') }}">Qu'est-ce que c'est ?</a>
                                        </li>
                                        <li class="item-list-a">
                                            <i class="fa fa-angle-right"></i> <a href="{{ path('bw3_description') }}#ecoles">Les écoles</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <footer>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="copyright-footer d-flex align-items-baseline justify-content-center">
                                <p class="copyright color-text-a">
                                    Tous droits réservés. <span class="color-a">&copy; 2021 <img src="{{ asset('img/logo-bw3.png') }}" style="height: 20px;"> La Marche Scolidaire</span>
                                </p>
                            </div>
                            <div class="d-flex flex-row justify-content-center" style="font-size: 10px; color: #000">
                                Website réalisé par <a href="https://www.xr-concept.be" class="ml-1" target="_blank"> www.xr-concept.be</a>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
            <!--/ Footer End /-->

        {% endblock %}

        {% block javascripts %}
            <!-- JavaScript Libraries -->
            <script src="{{ asset('lib/jquery/jquery.min.js') }}"></script>
            <script src="{{ asset('lib/jquery/jquery-migrate.min.js') }}"></script>
            <script src="{{ asset('lib/popper/popper.min.js') }}"></script>
            <script src="{{ asset('lib/bootstrap/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('lib/easing/easing.min.js') }}"></script>
            <script src="{{ asset('lib/owlcarousel/owl.carousel.min.js') }}"></script>
            <script src="{{ asset('lib/scrollreveal/scrollreveal.min.js') }}"></script>
            <script src="{{ asset('js/toastr.min.js') }}"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js" integrity="sha512-Tn2m0TIpgVyTzzvmxLNuqbSJH3JP8jm+Cy3hvHrW7ndTDcJ1w5mBiksqDBb8GpE2ksktFvDB/ykZ0mDpsZj20w==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
            <!-- Contact Form JavaScript File -->
            <script src="{{ asset('contactform/contactform.js') }}"></script>

            <!-- Template Main Javascript File -->
            <script src="{{ asset('js/main.js') }}"></script>


        {% endblock %}

    </body>
</html>
